.mod-map
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  background-color $color-2

div.cartodb-legend.choropleth
  right 11%
  padding 0
  font-family $site-font-family
  border 0
  background-color transparent
  box-shadow none

  ul
    min-width 0

  li
    color $color-3

  li.graph
    border 0
    .colors .quartile
      display inline-block
      border-radius 100%
      width 20px
      height 20px
      margin-left 10px
      &:first-child
        margin-left 0
