.mod-indowindow
  position relative
  width 246px
  top -20px
  margin-left -96px
  font-family $site-font-family
  color $text-color-1

  &:after
    position absolute
    display block
    content ''
    top 100%
    left 50%
    margin-left -18px
    width 0
    height 0
    border-style solid
    border-width 18px 18px 0 18px
    border-color $bg-color-1 transparent transparent transparent

.mod-indowindow-content
  padding 20px
  background-color $bg-color-1

  h2
    margin 0
    font-size 28px
    line-height .9

  .value
    color $text-color-4
    font-size 18px

    strong
      font-size 48px
      font-weight bold
      color $text-color-1

  .more-info
    display block
    background-color $bg-color-3
    padding 8px 20px
    color $text-color-2
    text-align center
    text-transform uppercase
    font-size 10px

.mod-indowindow-close
  position absolute
  right 20px
  top 20px
  text-decoration none
  font-size 24px
  line-height 24px
  font-weight bold
  color $text-color-3
  z-index 1

  &:hover
    text-decoration none
