body
  font-family $font-family
  font-size rem($text-size)
  line-height $line-height
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased

h1, h2, h3
  margin .67em 0

h1
  font-size rem($font-h1-size)

h2
  font-size rem($font-h2-size)

h3
  font-size rem($font-h3-size)

a
  color $color-1
  text-decoration none
  &:hover
    text-decoration underline

a, input, button
  &:focus
    outline 0

nav ul
  list-style none
  margin 0
  padding 0
