body
  display flex
  flex-direction column
  min-height 100vh

.layout-header
  position relative
  height 100vh
  overflow hidden
  background-color $bg-color-2

  .layout-map
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    transition all .25s ease

  .layout-sidebar
    position absolute
    display flex
    justify-content flex-end
    top 0
    bottom 0
    left 100%
    height 100%
    width 100%
    background-color rgba($bg-color-2, .5)
    transition all .03s ease
    z-index 1

  .layout-sidebar-content
    max-width 0
    background-color $bg-color-2
    transition all .25s ease

  &.is-sliced
    .layout-sidebar
      left 0
    .layout-map
      left -30%
    .layout-sidebar-content
      max-width 30%

.layout-content
  background-color $bg-color-1
